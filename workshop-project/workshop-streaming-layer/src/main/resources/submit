spark-submit --master yarn --deploy-mode cluster \
    --class com.epam.workshop.Main \
    --driver-memory 1024m --num-executors 1 --executor-memory 1024m --conf spark.executor.cores=2 \
    workshop-streaming-layer-1.0-SNAPSHOT-jar-with-dependencies.jar
    --input-path /user/workshop/input/streaming-questions.csv
    --output-path /user/workshop/output/questions
    --bootstrap-server localhost:6667
    --topic common-posts