export SPARK_MAJOR_VERSION=2

spark-submit --master yarn --deploy-mode cluster --class com.epam.workshop.MainExample \
    --driver-memory 1024m --num-executors 1 --executor-memory 1024m --conf spark.executor.cores=2 \
    workshop-dump-layer-1.0-SNAPSHOT-jar-with-dependencies.jar \
    --questions-input /user/workshop/input/questions.csv \
    --answers-input /user/workshop/input/answers.csv \
    --questions-output /user/workshop/output/questions \
    --answers-output /user/workshop/output/answers \
    --common-output /user/workshop/output/common \
    --es-server localhost \
    --es-port 9200 \
    --es-index workshop/dump